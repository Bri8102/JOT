<div class="row clearfix">
 <% if task.completed? %>
  <div class="complete">
   <%= link_to "Mark as Complete", complete_list_task_path(@list, task.id), method: :patch %>
  </div>
  <div class="todo_item">
   <p style="opacity: 0.4;"><strike><%= task.name %></strike></p>
  </div>
  <div class="trash">
   <%= link_to "Delete", list_task_path(@list, task.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
 <% else %>
  <div class="complete">
   <%= link_to "Mark as Complete", complete_list_task_path(@list, task.id), method: :patch %>
  </div>
  <div class="todo_item">
   <p><%= task.name %></p>
  </div>
  <div class="trash">
   <%= link_to "Delete", list_task_path(@list, task.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
 <% end %>
</div>